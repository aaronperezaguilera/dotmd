---
import Section from '../Section.astro'

import { work } from '@cv'
---

<Section title='Experiencia'>
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, highlights, url }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actualmente'

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a
                      href={url}
                      title={`Ver ${name}`}
                      target='_blank'
                    >
                      {name}
                    </a>
                  </h3>
                  <h4>{position}</h4>
                </div>

                <div>
                  <time
                    datetime={startDate}
                    data-title={startDate}
                  >
                    {startYear}
                  </time>
                  {' - '}
                  <time
                    datetime={endDate}
                    data-title={endDate}
                  >
                    {endYear}
                  </time>
                </div>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
